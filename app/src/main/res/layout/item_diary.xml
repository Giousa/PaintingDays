<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
        android:id="@+id/es"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentView="@+id/content"
        app:rightMenuView="@+id/right">

        <LinearLayout
            android:layout_margin="@dimen/dp_size_10"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_size_12"
                    android:id="@+id/tv_item_time"
                    android:layout_marginTop="@dimen/dp_size_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2019-04-26"/>

                <TextView
                    android:textSize="@dimen/sp_size_14"
                    android:id="@+id/tv_item_title"
                    android:layout_marginTop="@dimen/dp_size_5"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这个是标题"/>
            </RelativeLayout>


            <TextView
                android:textSize="@dimen/sp_size_16"
                android:id="@+id/tv_item_content"
                android:layout_marginTop="@dimen/dp_size_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="这个是内容，这个是内容,这个是内容，这个是内容,这个是内容，这个是内容,这个是内容，这个是内容,这个是内容，这个是内容"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_right_delete"
                android:layout_width="@dimen/dp_size_80"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_bright"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/dp_size_20"
                android:text="删除" />

            <TextView
                android:id="@+id/tv_right_update"
                android:layout_width="@dimen/dp_size_80"
                android:layout_height="match_parent"
                android:background="@android:color/holo_orange_dark"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/dp_size_20"
                android:text="更新" />

        </LinearLayout>
    </com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>



</LinearLayout>