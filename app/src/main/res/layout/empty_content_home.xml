<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/empty">


    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_size_200"
            android:layout_height="@dimen/dp_size_100"
            android:src="@drawable/empty_pic"/>

        <TextView
            android:layout_marginTop="@dimen/dp_size_20"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天的你，真的怠惰呢"
            android:textSize="@dimen/sp_size_15" />


        <TextView
            android:layout_gravity="center"
            android:paddingTop="@dimen/dp_size_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快点上传你的佳作吧!"
            android:textSize="@dimen/sp_size_15" />

    </LinearLayout>


</RelativeLayout>